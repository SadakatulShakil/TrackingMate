<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trackingmate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrackingMate">
        <activity android:name=".View.DetailsVisitReportActivity"></activity>
        <activity android:name=".View.ViewVisitReportActivity" />
        <activity android:name=".View.MerchantDetailsActivity" />
        <activity android:name=".View.AllMerchantListActivity" />
        <activity android:name=".View.AddMerchantActivity" />
        <activity android:name=".View.VisitReportActivity" />
        <activity android:name=".View.ProfileActivity" />
        <activity android:name=".View.RegisterAndLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />

        <service
            android:name=".LocationService"
            android:enabled="true"
            android:exported="false" />
    </application>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

</manifest>